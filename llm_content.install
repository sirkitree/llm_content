<?php

/**
 * @file
 * Install, update, and uninstall functions for the LLM Content module.
 */

declare(strict_types=1);

/**
 * Implements hook_schema().
 */
function llm_content_schema(): array {
  $schema['llm_content_markdown'] = [
    'description' => 'Stores generated markdown for nodes.',
    'fields' => [
      'nid' => [
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'description' => 'The node ID.',
      ],
      'langcode' => [
        'type' => 'varchar',
        'length' => 12,
        'not null' => TRUE,
        'default' => '',
        'description' => 'The language code.',
      ],
      'markdown' => [
        'type' => 'text',
        'size' => 'big',
        'not null' => TRUE,
        'description' => 'The generated markdown.',
      ],
      'generated' => [
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
        'description' => 'Unix timestamp of generation.',
      ],
    ],
    'primary key' => ['nid', 'langcode'],
    'indexes' => [
      'generated' => ['generated'],
    ],
  ];
  return $schema;
}

/**
 * Implements hook_install().
 */
function llm_content_install(): void {
  _llm_content_queue_missing_nodes();
}

/**
 * Queues published nodes that don't yet have generated markdown.
 */
function _llm_content_queue_missing_nodes(): void {
  $config = \Drupal::config('llm_content.settings');
  $types = $config->get('enabled_content_types') ?: [];
  if (empty($types)) {
    return;
  }

  /** @var \Drupal\llm_content\Service\MarkdownConverterInterface $converter */
  $converter = \Drupal::service('Drupal\llm_content\Service\MarkdownConverterInterface');
  $nids = $converter->getNidsMissingMarkdown($types);

  if (empty($nids)) {
    return;
  }

  $queue = \Drupal::queue('llm_content_markdown_generation');
  foreach ($nids as $nid) {
    $queue->createItem(['nid' => (int) $nid]);
  }

  \Drupal::logger('llm_content')->notice('Queued @count nodes for markdown generation.', [
    '@count' => count($nids),
  ]);
}

/**
 * Add xmlsitemap integration config defaults.
 */
function llm_content_update_11001(): void {
  $config = \Drupal::configFactory()->getEditable('llm_content.settings');
  $defaults = [
    'xmlsitemap_integration' => FALSE,
    'xmlsitemap_priority' => '0.5',
    'xmlsitemap_changefreq' => 604800,
    'xmlsitemap_index_priority' => '0.7',
    'disable_builtin_sitemap' => FALSE,
  ];
  foreach ($defaults as $key => $value) {
    if ($config->get($key) === NULL) {
      $config->set($key, $value);
    }
  }
  $config->save();
}
