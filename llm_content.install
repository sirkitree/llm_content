<?php

/**
 * @file
 * Install, update, and uninstall functions for the LLM Content module.
 */

declare(strict_types=1);

/**
 * Implements hook_schema().
 */
function llm_content_schema(): array {
  $schema['llm_content_markdown'] = [
    'description' => 'Stores generated markdown for nodes.',
    'fields' => [
      'nid' => [
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'description' => 'The node ID.',
      ],
      'langcode' => [
        'type' => 'varchar',
        'length' => 12,
        'not null' => TRUE,
        'default' => '',
        'description' => 'The language code.',
      ],
      'markdown' => [
        'type' => 'text',
        'size' => 'big',
        'not null' => TRUE,
        'description' => 'The generated markdown.',
      ],
      'generated' => [
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
        'description' => 'Unix timestamp of generation.',
      ],
    ],
    'primary key' => ['nid', 'langcode'],
    'indexes' => [
      'generated' => ['generated'],
    ],
  ];
  return $schema;
}

/**
 * Add xmlsitemap integration config defaults.
 */
function llm_content_update_11001(): void {
  $config = \Drupal::configFactory()->getEditable('llm_content.settings');
  $defaults = [
    'xmlsitemap_integration' => FALSE,
    'xmlsitemap_priority' => '0.5',
    'xmlsitemap_changefreq' => 604800,
    'xmlsitemap_index_priority' => '0.7',
    'disable_builtin_sitemap' => FALSE,
  ];
  foreach ($defaults as $key => $value) {
    if ($config->get($key) === NULL) {
      $config->set($key, $value);
    }
  }
  $config->save();
}
