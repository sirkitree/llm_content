{
  "name": "drupal/llm_content",
  "type": "drupal-module",
  "description": "Markdown LLM views for Drupal content",
  "require": {
    "php": ">=8.3",
    "league/html-to-markdown": "^5.0"
  },
  "require-dev": {
    "drupal/coder": "^8.3",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "lint": "@phpcs",
    "lint:fix": "@phpcbf"
  }
}
